---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="You're Invited - Chang & John" locale="en">
  <main class="invite-wrap">
    <section class="invite-stage">
      <p class="invite-kicker">A WEDDING INVITATION</p>
      <h1>Chang <span>&amp;</span> John</h1>
      <p class="invite-date">September 2, 2026 Â· Petritoli, Italy</p>

      <div class="envelope" aria-hidden="true">
        <div class="env-back"></div>
        <div class="env-letter">
          <div class="letter-inner">
            <p class="l1">Together with our families,</p>
            <p class="l2">we invite you to celebrate with us in Italy.</p>
          </div>
        </div>
        <div class="env-flap"></div>
        <div class="env-seal">C&amp;J</div>
      </div>

      <div class="invite-cta">
        <a href="/en/#rsvp" class="btn primary">Open Full Invitation</a>
        <a href="/en/#travel" class="btn">View Travel Details</a>
      </div>
    </section>
  </main>

  <style>
    .invite-wrap{min-height:100vh;display:grid;place-items:center;padding:40px 20px;background:radial-gradient(circle at 20% 20%,#f8f4ec,#f3eee5 40%,#eee7da 100%)}
    .invite-stage{width:min(860px,100%);text-align:center}
    .invite-kicker{letter-spacing:.2em;font-size:.72rem;color:#b6774a;text-transform:uppercase;margin:0 0 14px}
    h1{font-family:'Cormorant Garamond',serif;font-size:clamp(2.8rem,8vw,5.2rem);font-weight:500;color:#2f4361;margin:0}
    h1 span{color:#d17a4f;font-style:italic}
    .invite-date{margin:10px 0 28px;color:#6e6658;font-size:1rem}

    .envelope{position:relative;width:min(640px,92vw);height:360px;margin:0 auto 26px;perspective:1200px}
    .env-back{position:absolute;inset:40px 0 0;background:linear-gradient(180deg,#d8e5f8,#b8cee8);border-radius:12px;box-shadow:0 24px 50px rgba(45,63,95,.25)}
    .env-letter{position:absolute;left:6%;right:6%;bottom:26px;height:250px;background:#fffef9;border-radius:8px;box-shadow:0 10px 24px rgba(0,0,0,.12);transform:translateY(70px);animation:letterRise 2.2s ease .5s forwards}
    .letter-inner{padding:30px 24px}
    .l1{font-family:'Cormorant Garamond',serif;color:#2f4361;font-size:1.6rem;margin:0 0 12px}
    .l2{color:#5b5347;line-height:1.6;margin:0}

    .env-flap{position:absolute;left:0;right:0;top:40px;height:170px;background:linear-gradient(180deg,#a9c2df,#8fafd4);clip-path:polygon(0 0,100% 0,50% 100%);transform-origin:top;animation:openFlap 1.3s ease 0s forwards;z-index:4;border-radius:10px 10px 0 0}
    .env-seal{position:absolute;left:50%;top:145px;transform:translateX(-50%);width:64px;height:64px;border-radius:50%;background:#d17a4f;color:#fff;display:grid;place-items:center;font-weight:600;letter-spacing:.05em;box-shadow:0 8px 18px rgba(209,122,79,.45);animation:fadeSeal 1.2s ease .25s forwards}

    .invite-cta{display:flex;flex-wrap:wrap;gap:12px;justify-content:center}
    .btn{display:inline-block;padding:12px 18px;border-radius:999px;text-decoration:none;border:1px solid #c9bea9;color:#2f4361;background:#fff;font-weight:500}
    .btn.primary{background:#2f4361;color:#fff;border-color:#2f4361}

    @keyframes openFlap{to{transform:rotateX(180deg)}}
    @keyframes letterRise{to{transform:translateY(0)}}
    @keyframes fadeSeal{to{opacity:0;transform:translateX(-50%) scale(.85)}}
  </style>
</BaseLayout>
