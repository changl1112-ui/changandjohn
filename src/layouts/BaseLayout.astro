---
import '../styles/site.css';
const { title = 'Wedding', locale = 'en' } = Astro.props;

const langMap = { en: 'en', es: 'es', 'zh-cn': 'zh-CN' };
const htmlLang = langMap[locale] || 'en';

const description = 'Join Chang & John for their wedding celebration in Petritoli, Italy â€” September 2, 2026.';
const sitePassword = import.meta.env.PUBLIC_WEDDING_SITE_PASSWORD || '';
---
<!doctype html>
<html lang={htmlLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="theme-color" content="#3D5A80" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&family=Outfit:wght@300;400;500&display=swap" rel="stylesheet">
    <script is:inline define:vars={{ locale }}>
      window.__LOCALE__ = locale;
    </script>
  </head>
  <body data-locale={locale} style={sitePassword ? 'visibility:hidden' : undefined}>
    <div id="site-app"><slot /></div>

    {sitePassword && (
      <script is:inline define:vars={{ sitePassword }}>
        (() => {
          try {
            const AUTH_KEY = 'wedding_site_auth_v1';
            const body = document.body;

            const unlock = () => {
              body.style.visibility = 'visible';
            };

            if (sessionStorage.getItem(AUTH_KEY) === 'ok') {
              unlock();
              return;
            }

            const entered = window.prompt('Enter wedding website password');
            if (entered && entered === sitePassword) {
              sessionStorage.setItem(AUTH_KEY, 'ok');
              unlock();
              return;
            }

            body.innerHTML = '<main style="min-height:100vh;display:grid;place-items:center;font-family:system-ui,sans-serif;background:#f7f4ee;color:#2c2a26;"><div style="text-align:center;padding:24px;"><h1 style="margin:0 0 10px;font-size:28px;">Access denied</h1><p style="margin:0;opacity:.75;">Incorrect password.</p></div></main>';
            unlock();
          } catch (e) {
            document.body.style.visibility = 'visible';
          }
        })();
      </script>
    )}
  </body>
</html>
