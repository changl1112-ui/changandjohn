function toggleExploreZone(header) {
  const zone = header.closest('.explore-zone--collapsible');
  const content = zone.querySelector('.zone-content');
  const icon = zone.querySelector('.zone-toggle-icon');
  if (content.style.display === 'none') {
    content.style.display = 'block';
    icon.innerHTML = '&#9650;';
    zone.classList.add('explore-zone--open');
  } else {
    content.style.display = 'none';
    icon.innerHTML = '&#9660;';
    zone.classList.remove('explore-zone--open');
  }
}
</script>
